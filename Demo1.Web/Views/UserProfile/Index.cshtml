@using Demo1.BL.Features.Users.Queries
@model GetExternalUserByIdModel

<h1>User Detail</h1>
<table class="table table-bordered table-striped">
    <tr>
        <td>Account Enabled</td>
        <td>@Model.AccountEnabled</td>
    </tr>
    <tr>
        <td>Display Name</td>
        <td>@Html.Encode(Model.DisplayName)</td>
    </tr>
    <tr>
        <td>Given Name</td>
        <td>@Html.Encode(Model.GivenName)</td>
    </tr>
    <tr>
        <td>Surname</td>
        <td>@Html.Encode(Model.Surname)</td>
    </tr>
    <tr>
        <td>Principal Name/td>
        <td>@Html.Encode(Model.UserPrincipalName)</td>
    </tr>
    <tr>
        <td>Mail</td>
        <td>@Html.Encode(Model.Mail)</td>
    </tr>

    <tr>
        <td>Mail Nickname</td>
        <td>@Html.Encode(Model.MailNickname)</td>
    </tr>
</table>
